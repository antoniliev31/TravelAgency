@model HotelDetailsViewModel
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@((i == 0) ? "active" : "")"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        <div class="carousel-item @((i == 0) ? "active" : "")">
                            <img class="d-block w-100" src="@Model.Images[i].ImageUrl" alt="Image">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="image-like-container">
                <img class="d-block w-100" src="@Model.ImageUrl" alt="Image">
                <div class="like-container">
                    <button class="like-button" onclick="likeHotel('@Model.Id')">
                        <span id="like-icon-@Model.Id" class="like-icon">❤️</span>
                    </button>
                    @*<span id="like-count-@Model.Id" class="like-count">@Model.LikeCount</span>*@
                </div>
            </div>

            <p>Located in: <b>@Model.Location</b></p>
            <p>Price Per Month: <b>@String.Format("{0:f2}", Model.Price) BGN</b></p>
            <p>@Model.Description</p>
            <p>Category: <b>@Model.Category</b></p>
            <div class="form-inline">
                @if (this.User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="d-flex">
                        <a class="btn btn-warning" asp-controller="Hotel" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        <a class="ml-2 btn btn-danger" asp-controller="Hotel" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                        <form class="ml-2" asp-controller="Hotel" asp-action="Rent" asp-route-id="@Model.Id" method="post">
                            <input class="btn btn-primary" type="submit" value="Rent" />
                        </form>
                        <form class="ml-2" asp-controller="Hotel" asp-action="Leave" asp-route-id="@Model.Id" method="post">
                            <input class="btn btn-primary" type="submit" value="Leave" />
                        </form>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Agent Info</h5>
                    <p class="card-text">Email: @Model.Agent.Email</p>
                    <p class="card-text">Phone Number: @Model.Agent.PhoneNumber</p>
                </div>
            </div>

            <h5 class="card-title text-center">Коментари</h5>
            <div class="card mt-3">
                <div class="card-body">
                    @foreach (var post in Model.Posts)
                    {
                        <div class="card-text">
                            <p class="text-dark fw-bold">Име: @post.UserName</p>
                            <p>@post.Description</p>
                        </div>
                    }
                </div>
            </div>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-controller="Hotel" asp-action="AddComment" method="post">
                    <div class="form-group mt-3">
                        <label for="comment">Нов коментар</label>
                        <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Публикувай</button>
                </form>
            }
        </div>
    </div>
</div>
